<h1>Edit <%=@recipe.name%></h1>

<form method='POST' action='/recipes/<%= @recipe.id %>'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <b>Updated Name:</b> <input type="text" name="name"><br></br>
  <b>Current Ingredients:</b> <%=@recipe.ingredients%></br>
  <b>Updated Ingredients:</b> <input type="text" name="ingredients"><br></br>
  <b>Current Cook Time:</b></br>
  <b>Updated Cook Time:</b> <input type="text" name="cook_time"><br>
  <input type="submit" id="submit" value="submit" name="Create Recipe">
</form>